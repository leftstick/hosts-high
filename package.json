{
  "name": "hosts-master",
  "version": "4.0.0",
  "private": false,
  "license": "MIT",
  "author": "Howard Zuo <leftstick@qq.com>",
  "main": "main/index.js",
  "scripts": {
    "build": "rm -rf dist && max build && electron-builder --mac",
    "dev": "concurrently \"NODE_ENV=dev electron .\" \"max dev\"",
    "postinstall": "max setup && node postInstallScript.js",
    "prepare": "husky install",
    "setup": "max setup"
  },
  "dependencies": {
    "@ant-design/icons": "^4.8.0",
    "@umijs/max": "^4.0.36",
    "ahooks": "^3.7.2",
    "antd": "^5.0.7",
    "classnames": "^2.3.2",
    "hostile": "^1.3.3",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "@types/hostile": "^1.3.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "prettier-plugin-organize-imports": "^3",
    "prettier-plugin-packagejson": "^2",
    "replace-in-file": "^6.3.5",
    "typescript": "^4.9.4"
  },
  "build": {
    "productName": "Hosts-Master",
    "appId": "org.nanfeng.apps",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "asar": false,
    "files": [
      "build/",
      "output/",
      "main/",
      "!node_modules/**/*"
    ]
  }
}
